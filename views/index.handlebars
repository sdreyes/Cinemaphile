<div class="container">
  <a href="#" data-display="signin" class="button">Sign In</a>
  <div id="signin" class="portBox">
    <form id="signin" name="signin" method="post" action="/signin">
      <label for="username">Username</label>
      <input id="username-signin" class="text" name="username-signin" type="text" />
      <label for="password">Password</label>
      <input id="password-signin" name="password" type="password" />
      <button class="btn" id="signin-btn">Sign In</button>
    </form>
  </div>
</div>

<div class="container">
  <a href="#" data-display="empty" class="button">Sign up</a>
  <div id="empty" class="portBox">
    <form id="signup" name="signup" method="post" action="/signup">
      <label for="username-signup">Username</label>
      <input class="text" id="username-signup" name="username-signup" type="text" />
      <label for="password">Password</label>
      <input name="password" id="password-signup" type="password" />
      <button class="btn" id="signup-btn">Sign Up</button>
    </form>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
